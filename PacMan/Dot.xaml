<UserControl x:Class="PacMan.Dot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacMan"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="42">
    <Grid>
        <Rectangle Width="42" Height="42">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/pm_spites.png"
                            Viewport="0,0,42,42" AlignmentX="Left" AlignmentY="Top" Stretch="None">
                    <ImageBrush.Transform>
                        <TranslateTransform x:Name="SpriteSheetOffset" X="-168" Y="-252" />
                    </ImageBrush.Transform>
                </ImageBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
